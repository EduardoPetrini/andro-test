<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity">


    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <EditText
        android:id="@+id/user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:textAppearance="@style/comforttaFont" />

    <EditText
        android:id="@+id/user_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:gravity="center"
        android:password="true"
        android:layout_below="@+id/user_email"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:textAppearance="@style/comforttaFont"/>

    <Button
        android:id="@+id/buttonCadastrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/textView_cadastrar"
        android:background="@color/gray_default"
        android:layout_alignParentBottom="true"
        android:textColor="@color/Black_default"
        android:onClick="cadastrar"
        android:textAppearance="@style/comforttaFont"/>

    <Button
        android:id="@+id/butonLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_entrar"
        android:background="@color/blue_default"
        android:textColor="@color/White_default"
        android:onClick="entrar"
        android:layout_marginBottom="10dp"
        android:textAppearance="@style/comforttaFont"
        android:layout_above="@id/buttonCadastrar"/>

</RelativeLayout>
