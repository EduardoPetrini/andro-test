<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".HomeActivity"
    tools:ignore="MissingPrefix">

     <TextView
        android:id="@+id/headText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/head_cadastro"
        android:textSize="20dp"
        android:textAppearance="@style/comforttaFont"
        />

    <EditText
        android:id="@+id/inputNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/complet_name"
        android:layout_marginTop="30dp"
        android:textAppearance="@style/comforttaFont"/>

    <EditText
        android:id="@+id/inputEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/email"
        android:layout_marginTop="90dp"
        android:textAppearance="@style/comforttaFont"/>

    <EditText
        android:id="@+id/inputSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/password"
        android:layout_marginTop="150dp"
        android:password="true"
        android:textAppearance="@style/comforttaFont"/>

    <EditText
        android:id="@+id/inputConfSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/confirm_password"
        android:layout_marginTop="210dp"
        android:password="true"
        android:textAppearance="@style/comforttaFont"/>

    <Button
        android:id="@+id/buttonCadastre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/button_create_account"
        android:textAppearance="@style/comforttaFont"
        android:background="@color/blue_default"/>

</RelativeLayout>
