<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".HomeActivity"
    android:transitionGroup="false"
    android:touchscreenBlocksFocus="false"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:backgroundTintMode="add">

    <ImageView
        android:id="@+id/imagemUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:src="@mipmap/ic_user"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/viagensListView" />

    <TextView
        android:id="@+id/nomeUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:textAppearance="@style/comforttaFont"
        android:layout_toRightOf="@+id/imagemUser"
        android:textSize="25dp"
        android:text="Danilo"
        android:textColor="@color/Black_default"
        android:layout_toEndOf="@+id/imagemUser" />

    <TextView
        android:id="@+id/cargoUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/comforttaFont"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/imagemUser"
        android:textSize="15dp"
        android:text="Solicitante"
        android:textColor="@color/Black_default"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/nomeUsuario" />

    <ListView
        android:id="@+id/viagensListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cargoUsuario"
        android:layout_above="@+id/buttonAddTarefa"
        android:layout_marginTop="-4dp"
        android:layout_marginBottom="-4dp">

    </ListView>

    <ImageButton
        android:id="@+id/buttonAddTarefa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:background="@mipmap/ic_add"
        android:maxHeight="72dp"
        android:maxWidth="72dp"/>

</RelativeLayout>
