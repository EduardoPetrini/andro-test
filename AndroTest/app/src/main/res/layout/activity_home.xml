<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".HomeActivity"
    android:transitionGroup="false"
    android:touchscreenBlocksFocus="false"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:backgroundTintMode="add">

    <TextView
        android:id="@+id/nomeUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/comforttaFont"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/cargoUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nomeUsuario"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/comforttaFont"
        android:textSize="15dp"/>


    <ListView
        android:id="@+id/viagensListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cargoUsuario"
        android:layout_above="@+id/buttonAddTarefa"
        android:divider="#797A7D"
        android:dividerHeight="2sp"
        android:drawSelectorOnTop="false">

    </ListView>

    <ImageButton
        android:id="@+id/buttonAddTarefa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="@mipmap/ic_add"
        android:maxHeight="72dp"
        android:maxWidth="72dp" />

</RelativeLayout>
